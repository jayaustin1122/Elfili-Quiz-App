<!-- fragment_detail.xml -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/bg_home"
    tools:context=".ui.DetailFragment">

    <ImageButton
        android:id="@+id/back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:src="@drawable/baseline_arrow_back_24"
        android:text="back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/g_orange_yellow" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textTitle">

        <Button
            android:id="@+id/play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/green"
            android:fontFamily="@font/bold"
            android:textColor="@color/black"
            android:layout_gravity="center_horizontal"
            android:text="PLAY" />

        <Button
            android:id="@+id/btnQuiz"
            android:layout_width="wrap_content"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:fontFamily="@font/bold"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="QUIZ" />

        <Button
            android:id="@+id/pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/g_orange_yellow"
            android:textColor="@color/black"
            android:fontFamily="@font/bold"
            android:text="PAUSE" />

        <Button
            android:id="@+id/stop"
            android:layout_width="wrap_content"
            android:backgroundTint="@color/g_red"
            android:textColor="@color/black"
            android:fontFamily="@font/bold"
            android:layout_height="wrap_content"
            android:text="STOP" />
    </LinearLayout>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:scaleType="centerCrop"
        android:src="@drawable/chapter_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/back"
        app:shapeAppearance="@style/ShapeAppearanceOverlay.Avatar" />

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/bold"
        android:text="asdasd"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textAllCaps="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />
    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_marginTop="10dp"
        android:layout_height="0dp"    app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:cardCornerRadius="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sekkbar">
        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/ASD"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/bold"
                    android:scrollbars="vertical"
                    android:paddingStart="20dp"
                    android:text="TALASALITAAN AT KWENTO"
                    android:textAlignment="textStart"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/textContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/black"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:fontFamily="@font/poppins_light"
                    android:paddingBottom="10dp"
                    android:text="@string/kabanata_1_content"
                    android:scrollbars="vertical"
                    android:textAlignment="textStart"
                    android:textSize="16sp" />
            </LinearLayout>

        </ScrollView>
    </androidx.cardview.widget.CardView>


    <SeekBar
        android:id="@+id/sekkbar"
        android:layout_width="300dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:thumbTint="@android:color/white"
        android:progressTint="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>
